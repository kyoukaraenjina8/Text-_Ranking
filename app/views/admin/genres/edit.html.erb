<div class="container">
  <h2 class="page-title">ジャンル追加・編集画面</h2>
  <div class="row">
    <div class="col-6 mx-left">
      <%= form_with model: @genre, url: admin_genre_path(@genre),method: :patch do |f| %>
        <td><%= f.label :"カテゴリー名", class: "mr-3" %></td>
        <td><%= f.text_field :genre_name, class: "mr-5" %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-outline-primary" %></td>
      <% end %>
    </div>
  </div>
</div>