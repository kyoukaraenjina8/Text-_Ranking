<div class="container">
  <h2 class="page-title">ジャンル管理・一覧画</h2>

  <div class="row p-4">
    <div class="col-4">
      <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
      <%= f.label :"カテゴリー名", class: "mr-5" %>
      <%= f.text_field :genre_name, class: "mr-5" %>
      <%= f.submit'新規登録',class: "btn btn-outline-primary btn-sm" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <table class='table'>
        <thead>
          <tr><th>カテゴリー名</th></tr>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.genre_name %>
            </td>
            <td class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success btn-sm" %>
            </td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
