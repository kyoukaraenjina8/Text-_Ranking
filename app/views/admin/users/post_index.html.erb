<div class="container p-5">
  <div class="row">
    <div class="col">
      <h3><%= @user_post.name %>さんの投稿一覧（全<%= @user_post.posts.count %>件）</h3>
      <table class='table'>
        <thead>
          <tr>
            <th nowrap>投稿日時</th>
            <th nowrap>テキスト名</th>
            <th nowrap>テキスト説明</th>
            <th nowrap>レビュー内容</th>
            <th nowrap>価格</th>
            <th nowrap>コメント数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to admin_post_path(post.id) do %>
                  <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
                <% end %>
              </td>
              <td>
                <%= post.text_name %>
              </td>
              <td>
                <%= truncate(post.introduction, length: 48) do %>
                  (<%= link_to '投稿詳細', admin_post_path(post.id) %>）
                <% end %>
              </td>
              <td>
                <%= truncate(post.review, length: 48) do %>
                  (<%= link_to '投稿詳細', admin_post_path(post.id) %>）
                <% end %>
              </td>
              <td>
                ¥<%= post.price %>
              </td>
              <td>
                <%= post.comments.count %>
              </td>
              <td>
                <%= link_to "削除", admin_post_path(post), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
  <div class="row">
    <div class="col">
    <h3>コメント一覧（全<%= @user_comment.comments.count %>件）</h3>
      <table class='table'>
        <thead>
          <tr>
            <th nowrap>投稿日時</th>
            <th nowrap>テキスト名</th>
            <th nowrap>コメント内容</th>
            <th nowrap>総合評価</th>
            <th nowrap>読みやすさ</th>
            <th nowrap>価格の妥当性</th>
            <th nowrap>実用性</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td>
                <%= link_to root_path do %>
                  <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
                <% end %>
              </td>
              <td>
                <%= comment.post.text_name %>
              </td>
              <td>
                <%= comment.comment_introduction %>
              </td>
              <td>
                <%= comment.total_score %>
              </td>
              <td>
                <%= comment.read_score %>
              </td>
              <td>
                <%= comment.price_score %>
              </td>
              <td>
                <%= comment.usability_score %>
              </td>
              <td>
                <%= link_to "削除", admin_comment_path(comment), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @comments %>
    </div>
  </div>
</div>
