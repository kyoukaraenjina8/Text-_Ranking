          <li>
            <%= link_to 'テキスト投稿', new_posts_path, class:'nav-link text-light btn-sm btn-dark ml-4' %>
          </li>
          <li>
            <%= link_to 'マイページ', user_path(current_user) , class:'nav-link text-light btn-sm btn-dark ml-1' %>
          </li>
          <% end %>
          <li>
            <%= link_to 'ランキング', root_path, class:'nav-link text-light btn-sm btn-dark ml-1' %>
          </li>
          <li>
            <%= link_to 'text一覧', posts_path, class:'nav-link text-light btn-sm btn-dark ml-1' %>
          </li>
          <li>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'nav-link text-light btn-sm btn-dark ml-1' %>
          </li>
        <% else %>
          <li>
            <%= link_to 'ランキング', root_path, class:'nav-link text-light btn btn-dark ml-2' %>
          </li>
          <li>
            <%=  link_to '新規登録', new_user_registration_path, class:'nav-link text-light btn btn-dark ml-2' %>
          </li>
          <li>
            <%= link_to 'ログイン', new_user_session_path, class:'nav-link text-light btn btn-dark ml-2' %>
          </li>
        <% end %>
        </ul>
      </div>
      <% if user_signed_in? %>
  <div class="search_form m-1">
    <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder: "Textの名前で検索" %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
   <% end %>

    </div>
  </nav>
</header>
