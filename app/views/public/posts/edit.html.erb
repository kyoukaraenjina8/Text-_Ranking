<div class="container p-5">
  <div class="row">
    <h1>投稿編集</h1>
  </div>

  <div class="row mt-2">
    <div class="col-8 mx-auto text-center">
<%= form_with model: @post_edit do |f| %>
    <table class='table'>
    <tr>
      <th><%= f.label :"商品画像" %></th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th><%= f.label :"商品名" %></th>
      <td><%= f.text_field :text_name %></td>
    </tr>
    <tr>
      <th><%= f.label :"商品説明" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <th><%= f.label :"レビュー" %></th>
      <td><%= f.text_area :review %></td>
    </tr>
    <tr>
      <th><%= f.label :"価格" %></th>
      <td><%= f.text_field :price %></td>
    </tr>

    </table>
    <%= f.submit '変更を保存' %>
    <% end %>
  </div>
</div>
</div>