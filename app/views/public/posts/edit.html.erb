<div class="container p-5">
  <div class="row">
    <h1>投稿編集</h1>
  </div>
  
  <% if @post_edit.errors.any? %>
    <%= @post_edit.errors.count %>件のエラーが発生しました
    <ul>
      <% @post_edit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      
    </ul>
  <% end %>
  <div class="row mt-2">
    <div class="col-8 mx-auto text-center">
      <%= form_with model: @post_edit do |f| %>
        <table class='table'>
          <tr>
            <th><%= f.label :"商品画像" %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label :"商品名" %></th>
            <td><%= f.text_field :text_name, size: "60x1" %></td>
          </tr>
          <tr>
            <th><%= f.label :"商品説明" %></th>
            <td><%= f.text_area :introduction, size: "60x3", placeholder: "入力は300文字まで" %></td>
          </tr>
          <tr>
            <th><%= f.label :"レビュー" %></th>
            <td><%= f.text_area :review, size: "60x3", placeholder: "入力は300文字まで" %></td>
          </tr>
          <tr>
            <th><%= f.label :"価格" %></th>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <th><%= f.label :"ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name %></td>
          </tr>
        </table>
        <%= f.submit '変更を保存' %>
      <% end %>
    </div>
    <div class="col-4 offset-8">
      <%= link_to "削除", post_path(@post_edit), method: :delete, class: "btn btn-danger ms-3", data: { confirm: "本当に投稿を削除しますか？" } %>
    </div>
  </div>
</div>
