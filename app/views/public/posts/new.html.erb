<div class="container p-5">
  <div class="row">
    <div class="col text-center">
      <h1>テキストを投稿する</h1>
    </div>
  </div>

  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row mt-2">
    <div class="col-8 mx-auto text-center">
      <%= form_with model: @post do |f| %>
      <table class='table'>
      <tr>
        <th><%= f.label :"商品画像" %></th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th><%= f.label :"商品名" %></th>
        <td><%= f.text_field :text_name, size: "60x1" %></td>
      </tr>
      <tr>
        <th><%= f.label :"商品説明" %></th>
        <td><%= f.text_area :introduction, size: "60x3", placeholder: "入力は300文字まで" %></td>
      </tr>
      <tr>
        <th><%= f.label :"レビュー" %></th>
        <td><%= f.text_area :review, size: "60x3", placeholder: "入力は300文字まで" %></td>
      </tr>
      <tr>
        <th><%= f.label :"価格" %></th>
        <td><%= f.text_field :price %></td>
      </tr>
  </table>
      <%= f.submit '投稿' %>
    <% end %>
    </div>
</div>
</div>