<div class = "container">
<h2>検索結果</h2>
  <div class = "row">
    <table class="table table-hover table-inverse">
      <tbody>
          <tr>
            <th></th>
            <th><%= "テキスト名" %></th>
            <th><%= "投稿者名" %></th>
            <th><%= "ジャンル" %></th>
          </tr>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image(100, 100) %></td>
            <td><%= link_to post_path(post.id) do %>
                <%= post.text_name %>
                <% end %>
            </td>
            <td><%= post.user.name %></td>
            <td><%= post.genre.genre_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>