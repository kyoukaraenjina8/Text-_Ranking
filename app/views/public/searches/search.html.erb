<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= image_tag post.get_image(100, 100) %>
            <%= link_to post_path(post.id) do %>
            <%= post.text_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
